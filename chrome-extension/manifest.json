{
  "manifest_version": 2,
  "name": "Prolix",
  "description": "Finds replacements for common words in your social media posts!",
  "version": "1.0",
  "background":{"scripts":["background.js"]},
  "content_scripts": [
    {
      "js": [

        "jquery.js",
        "content.js"
      ],
      "matches": [
        "http://*/*",
        "https://*/*"
      ]
    }
  ],
  "permissions": [
    "https://secure.flickr.com/",
    "tabs",
    "contextMenus"
  ],
  "page_action": {
    "16": "icon-bitty.png",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  }
}
